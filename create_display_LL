
#include <stdio.h>
#include <stdlib.h>
struct node {
    int data;
    struct node *next;
}*head;
void create(int *arr,int size)
{
    struct node *temp,*last;
    head=(struct node*)malloc(sizeof(struct node));
    head->data=arr[0];
    head->next=NULL;
    last=head;
    for(int i=1;i<size;i++)
    {
        temp=(struct node*)malloc(sizeof(struct node));
        temp->data=arr[i];
        temp->next=NULL;
        last->next=temp;
        last=temp;
    }
}
void display(struct node *ptr)
{
    while(ptr!=NULL)
    {
        printf("%d ",ptr->data);
        ptr=ptr->next;
    }
}
//recursive display function
/* void display(struct node *ptr)
{
    if(ptr!=NULL)
    {
        printf("%d ",ptr->data);
        display(ptr->next);
    }
} */
int main() {
    int arr[]={1,2,3,4,5};
    int size=sizeof(arr)/sizeof(arr[0]);
    create(arr,size);
    display(head);

    return 0;
}
